<body style="background-color: rgb(249, 252, 255)">
    
    <div class="w-55 p-2 ms-5 mt-4">
        <h1>
            Deneme Sınavı - {{ders}}
        </h1>
    </div>
    {{#if sessionFlash.message}}

      <div class="{{sessionFlash.type}}">
          {{sessionFlash.message}}
      </div>
    {{/if}}
<script>var i=1;</script>
    <div class="progress" id="sayac">
        <div class="progress-bar progress-bar-striped progress-bar-animated"
         role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" 
         style="width: 100%">
        </div>
    </div>
    
{{#each exam}}
    <div class="soru">
        <span>
           <script>document.write(i++);</script> - 
           <b>
            {{soru}}
           </b>
        </span>
    </div>

    <div id="secenekler" class="soru">

    <div class="form-check">
     <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
        <label class="form-check-label" for="flexRadioDefault1">
         a) {{this.dogruCevap}}
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2">
        <label class="form-check-label" for="flexRadioDefault2">
          b) {{yanlis1}}
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2">
        <label class="form-check-label" for="flexRadioDefault2">
          c) {{yanlis2}}
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2">
        <label class="form-check-label" for="flexRadioDefault2">
          d) {{yanlis3}}
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2">
        <label class="form-check-label" for="flexRadioDefault2">
          e) {{yanlis4}}
        </label>
      </div>

    </div>
    {{/each}}
    <div id="butonlar" class="soru">
        <button type="button" class="btn btn-outline-info ms-5"><i class="bi bi-caret-left-fill"></i> Önceki</button>
        <span style="margin-left: 3%;">1 / 20</span>
        <button type="button" class="btn btn-outline-info">Sonraki <i class="bi bi-caret-right-fill"></i></button>
        <button type="button" class="btn btn-success"><i class="bi bi-check-lg"></i> Sınavı Bitir</button>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>