<body style="background-color: rgba(31,72,96,255)">
    <span>
        <h1 style="text-align: center;margin-top: 5%; color: white;"><i class="bi bi-person-workspace"></i><br>LOGİN</h1>
    </span>

<form action="/users/login" method="POST">
    {{#if sessionFlash.message}}

      <div class="{{sessionFlash.type}}">
          {{sessionFlash.message}}
      </div>
    {{/if}}
 <div class="row m-5 pt-1" > 
 <div class="col-sm-3 mx-auto my-3 " > <!--3 KOLONLUK YER AYIR-->
    
    <div class="mb-3"> <!--MARGİN BOTTOM DEMEKTİR-->   
            <input type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="E-Posta">    
    </div>

    <div class="mb-3">
        <input type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Şifre">
    </div>
    
    <button type="submit" class="btn btn-secondary col-sm-12"><b>Giriş Yap</b></button>

    <div class="mb-3 mt-3 col-sm-12" style="text-align: center;">
    <a href="newpassword" style="text-decoration: none; color: white;">Şifreni mi Unuttun?</a>
    </div>
    <hr style="color: white;"/>

    <div class="mb-3 mt-3 col-sm-12" style="text-align: center;">
        <a href="register"><button type="button" class="btn btn-success"><b>Yeni Hesap Oluştur</b></button></a>
    </div>
 </div>
 </div>
</form>
 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    
</body>
</html>